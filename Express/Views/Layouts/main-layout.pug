doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title #{title}
        link(rel="stylesheet", href="/Styles/home.css")
        block styles
    body
        h1 Hello from Template Engine #{name}
        if products.length > 1
            each product in products
                div.default-class
                    h1 #{product.name}
                    p #{product.price}
        else
            block content